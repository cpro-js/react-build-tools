{
  "name": "@cpro-js/react-build-tools",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "postinstall": "is-ci || husky install",
    "postversion": "lerna publish from-git",
    "release": "env-cmd -f .env.local --no-override lerna version",
    "test": "yarn workspaces foreach -pt run test",
    "test:ci": "yarn workspaces foreach -pt run test"
  },
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "env-cmd": "^10.1.0",
    "husky": "^7.0.2",
    "import-sort-style-module": "^6.0.0",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-package": "^1.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "packageManager": "yarn@3.0.1",
  "workspaces": [
    "packages/*",
    "example/*"
  ]
}
